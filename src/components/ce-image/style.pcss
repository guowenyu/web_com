.wrapper {
  display: inline-block;
  font-size: 0;
  box-sizing: border-box;
}

.is-respective {
  position: relative;
  height: 0;
  overflow: hidden;
}

img {
  width: 100%;
  height: 100%;
}

.is-respective img {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.is-empty {
  background: $999;
}

.is-empty img {
  display: none;
}
